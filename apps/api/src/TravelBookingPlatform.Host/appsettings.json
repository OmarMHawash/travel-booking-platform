{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TravelBookingPlatform;User Id=sa;Password=rootuser;TrustServerCertificate=True;",
    "SerilogConnection": "Server=localhost;Database=master;User Id=sa;Password=rootuser;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLongForProduction!",
    "Issuer": "TravelBookingPlatform",
    "Audience": "TravelBookingPlatform.Api",
    "ExpirationInMinutes": 60
  },
  "Cors": {
    "Origins": ["http://localhost:3000", "https://localhost:3000"],
    "PolicyName": "AllowAllTrustedOrigins"
  },
  "OpenApi": {
    "Servers": [
      {
        "Url": "http://localhost:8080",
        "Description": "Test server (HTTP)"
      },
      {
        "Url": "https://localhost:8081",
        "Description": "Test server (HTTPS)"
      }
    ]
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.MSSqlServer",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "SerilogConnection",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "dbo",
            "autoCreateSqlDatabase": true,
            "autoCreateSqlTable": true,
            "databaseName": "TravelBookingPlatform"
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  },
  "Stripe": {
    "PublishableKey": "pk_test_YOUR_PUBLISHABLE_KEY",
    "SecretKey": "sk_test_YOUR_SECRET_KEY",
    "WebhookSecret": "whsec_YOUR_WEBHOOK_SECRET"
  },
  "SendGrid": {
    "ApiKey": "YOUR_SENDGRID_API_KEY",
    "FromName": "Travel Booking Platform",
    "FromEmail": "noreply@travelbookingplatform.com"
  }
}
